{
  "version": 2,
  "builds": [
    {
      "src": "./packages/server/server.js",
      "use": "@vercel/nodemon"
    },
    {
      "src": "./packages/client/build",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/packages/server/server.js"
    }
  ]
}
